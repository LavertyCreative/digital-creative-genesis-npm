{
  "name": "digital-creative-genesis-npm-master",
  "version": "1.0.0",
  "description": "Genesis starter theme for use on sites built by Laverty Creative using npm as a build tool",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "clean": "rimraf assets/{styles/build/*,scripts/build/*,images/build/*}",
    "autoprefixer": "postcss -u autoprefixer -r assets/styles/build/*",
    "scss": "node-sass --source-map-embed --source-map-contents --output-style compressed -o assets/styles/build assets/styles/src",
    "babel": "babel assets/scripts/src -d assets/scripts/build",
    "lint": "eslint assets/scripts/src || true",
    "lint-scss": "stylelint assets/styles/src/*.scss --syntax scss || true",
    "uglify": "mkdirp assets/scripts/build -p && uglifyjs assets/scripts/src/*.js -m -o assets/scripts/build/scripts.js && uglifyjs assets/scripts/src/*.js -m -c -o assets/scripts/build/scripts.min.js",
    "imagemin": "imagemin assets/images/src/* -o assets/images/build",
    "serve": "browser-sync start --proxy 'sandbox.local' --files \"assets/styles/build/*.css, assets/scripts/build/*.js, **/*.html, !node_modules/**/*.html\"",
    "build:css": "run-s lint-scss scss autoprefixer",
    "build:js": "run-s babel lint uglify",
    "build:images": "run-s imagemin",
    "build": "run-s build:*",
    "watch:css": "onchange \"assets/styles/src\" -- run-s build:css",
    "watch:js": "onchange \"assets/scripts/src\" -- run-s build:js",
    "watch:images": "onchange \"assets/images/src\" -- run-s build:images",
    "watch": "run-p serve watch:*",
    "start": "run-s build watch"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.5",
    "@babel/preset-env": "^7.1.5",
    "autoprefixer": "^9.0.1",
    "browser-sync": "^2.24.6",
    "eslint": "^5.2.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "imagemin-cli": "^3.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.9.2",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.1.0",
    "postcss-cli": "^6.0.0",
    "rimraf": "^2.6.2",
    "stylelint": "^9.3.0",
    "uglify-js": "^3.4.5"
  },
  "dependencies": {}
}
